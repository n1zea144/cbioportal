<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="false" monitoring="autodetect"
         maxBytesLocalDisk="${mybatis.cache.maxBytesLocalDisk}"
         dynamicConfig="true" name="cbioportal-ehcache">

  <diskStore path="${mybatis.cache.path}"/>
  <sizeOfPolicy maxDepth="10000000" maxDepthExceededBehavior="continue"/>
  
  <!-- <defaultCache -->
  <!--     statistics="${mybatis.cache.statistics}"> -->
  <!--     maxEntriesLocalHeap="${mybatis.cache.default.entrysize}" -->
  <!--     maxBytesLocalDisk="${mybatis.cache.default.disksize}"> -->
  <!--     <persistence strategy="localTempSwap"/> -->
  <!--     <sizeOfPolicy maxDepth="1000000" maxDepthExceededBehavior="continue"/> -->
  <!-- </defaultCache> -->

  <cache name="org.cbioportal.persistence.mybatis.GeneMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.GeneMapper.entrysize}"/>

  <cache name="org.cbioportal.persistence.mybatis.MutationMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.MutationMapper.entrysize}">
      <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.ClinicalDataMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.ClinicalDataMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.DiscreteCopyNumberMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.DiscreteCopyNumberMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.SampleMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.SampleMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.PatientMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.PatientMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.GenePanelMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.GenePanelMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.SignificantlyMutatedGeneMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.SignificantlyMutatedGeneMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>

  <cache name="org.cbioportal.persistence.mybatis.SignificantCopyNumberRegionMapper"
      statistics="${mybatis.cache.statistics}"
      maxEntriesLocalHeap="${mybatis.cache.SignificantCopyNumberRegionMapper.entrysize}">
    <persistence strategy="localTempSwap"/>
  </cache>
    
</ehcache>
